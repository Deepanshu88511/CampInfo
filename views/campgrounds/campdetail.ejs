<% layout('./layouts/boilerplate') %>

  <div class="container my-5">
    <h1 class="mb-4 text-center text-primary">Campground Details</h1>

    <!-- Campground Card -->
    <div class="card mb-4 shadow-lg border-0 rounded-lg">
      <div class="row no-gutters">
        <div class="col-md-4">
          <img src="<%= campground.image %>" class="card-img rounded-left" alt="Campground Image"
            style="max-width: 100%; max-height: 300px; object-fit: cover;">
        </div>
        <div class="col-md-8">
          <div class="card-body">
            <h2 class="card-title font-weight-bold text-dark">
              <%= campground.title %>
            </h2>
            <p class="card-text text-muted"><strong>Price:</strong> $<%= campground.price %>
            </p>
            <p class="card-text text-muted"><strong>Location:</strong>
              <%= campground.location %>
            </p>
            <p class="card-text text-muted"><strong>Description:</strong>
              <%= campground.description %>
            </p>
            <p class="card-text text-muted"><strong>Owner:</strong>
              <%= campground.owner.username %>
            </p>
          </div>
        </div>
      </div>
    </div>

    <% if (currentUser && campground.owner.equals(currentUser._id)) { %>
      <div class="d-flex justify-content-start mb-4">
        <a href="/campgrounds/<%= campground._id %>/edit" class="btn btn-primary mr-2"><i class="fas fa-edit"></i> Edit
          Campground</a>
        <form action="/campgrounds/<%= campground._id %>?_method=delete" method="post">
          <button type="submit" class="btn btn-danger"><i class="fas fa-trash"></i> Delete</button>
        </form>
      </div>
      <% } %>

        <!-- Review Section -->
        <div class="card mt-5 shadow-lg border-0 rounded-lg">
          <div class="card-header bg-primary text-white">
            <h3 class="mb-0">Leave a Review</h3>
          </div>
          <div class="card-body">
            <form action="/campgrounds/<%= campground._id %>/reviews" method="post" class="needs-validation" novalidate>
              <div class="form-group">
                <label for="rating">Rating</label>
                <div class="d-flex align-items-center">
                  <input type="range" class="form-control-range" id="rating" name="review[rating]" min="0" max="5"
                    step="1" value="0" oninput="updateRatingValue(this.value)" style="width: 100%;" required>
                  <span id="ratingValue" class="ml-3 font-weight-bold">0</span>
                </div>
                <div class="d-flex justify-content-between mt-2 text-muted">
                  <span>0</span>
                  <span>5</span>
                </div>
                <div class="invalid-feedback">
                  Please provide a rating.
                </div>
                <div class="valid-feedback">
                  Looks good!
                </div>
              </div>
              <div class="form-group mt-3">
                <label for="comment">Comment</label>
                <textarea class="form-control" id="comment" name="review[comment]" rows="4" required></textarea>
                <div class="invalid-feedback">
                  Please provide a comment.
                </div>
                <div class="valid-feedback">
                  Looks good!
                </div>
              </div>
              <button type="submit" class="btn btn-primary mt-3">Submit Review</button>
            </form>
          </div>
        </div>

        <!-- Display Reviews Section -->
        <div class="card mt-5 shadow-lg border-0 rounded-lg">
          <div class="card-header bg-primary text-white">
            <h3 class="mb-0">Reviews</h3>
          </div>
          <div class="card-body">
            <% if (campground.reviews.length> 0) { %>
              <% campground.reviews.forEach(function (review) { %>
                <div class="review mb-4 p-3 border rounded-lg shadow-sm">
                  <h5 class="mb-2 font-weight-bold">By: <%= review.owner.username %>
                  </h5>
                  <h5 class="mb-2 text-muted">Rating: <%= review.rating %>
                  </h5>
                  <p class="mb-1">
                    <%= review.comment %>
                  </p>
                  <% if (currentUser && review.owner.equals(currentUser._id)) { %>
                    <form action="/campgrounds/<%= campground._id %>/reviews/<%= review._id %>?_method=delete"
                      method="post" class="d-inline">
                      <button type="submit" class="btn btn-danger btn-sm mt-2"><i class="fas fa-trash"></i>
                        Delete</button>
                    </form>
                    <% } %>
                </div>
                <% }); %>
                  <% } else { %>
                    <p class="text-muted">No reviews yet. Be the first to leave a review!</p>
                    <% } %>
          </div>
        </div>
  </div>