<% layout('./layouts/boilerplate') %>
    <h1>All Campgrounds</h1>
    <a href="/campgrounds/new" class="btn btn-primary mb-3">New Campground</a>

    <div class="row">
        <% for(let campground of campgrounds){ %>
            <div class="col-md-4 mb-4">
                <div class="card">
                    <img src="<%= campground.image %>" class="card-img-top" alt="<%= campground.title %>">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= campground.title %>
                        </h5>
                        <p class="card-text">
                            <%= campground.description %>...
                        </p>
                        <p class="card-text"><strong>Price:</strong> $<%= campground.price %>
                        </p>
                        <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">View Details</a>
                    </div>
                </div>
            </div>
            <% } %>
    </div>