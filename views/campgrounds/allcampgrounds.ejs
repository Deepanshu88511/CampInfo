<% layout('./layouts/boilerplate') %>

<div class="container my-5">
  <h1 class="mb-4 text-center">All Campgrounds</h1>
  <div class="text-center mb-4">
    <a href="/campgrounds/new" class="btn btn-success btn-lg">New Campground</a>
  </div>

  <% if (!campgrounds.length) { %>
    <div class="alert alert-info text-center" role="alert">
      Nothing to show here
    </div>
  <% } else { %>
    <div class="row">
      <% for (let campground of campgrounds) { %>
        <div class="col-md-4 mb-4">
          <div class="card h-100 shadow-sm">
            <img src="<%= campground.image %>" class="card-img-top" alt="<%= campground.title %>" style="height: 200px; object-fit: cover;">
            <div class="card-body d-flex flex-column">
              <h5 class="card-title text-primary">
                <%= campground.title %>
              </h5>
              <p class="card-text flex-grow-1">
                <%= campground.description.substring(0, 100) %>...
              </p>
              <p class="card-text"><strong>Price:</strong> $<%= campground.price %></p>
              <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary mt-auto">View Details</a>
            </div>
          </div>
        </div>
      <% } %>
    </div>
  <% } %>
</div>
