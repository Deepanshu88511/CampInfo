<% layout('./layouts/boilerplate') %>

<div class="container my-5">
  <h1 class="mb-4 text-center text-primary">Edit Campground</h1>

  <form action="/campgrounds/<%= campground._id %>?_method=put" method="post" class="needs-validation" novalidate enctype="multipart/form-data">
    <div class="form-group">
      <label for="title">Title:</label>
      <input type="text" class="form-control" id="title" name="campground[title]" value="<%= campground.title %>" required>
      <div class="invalid-feedback">
        Please provide a title.
      </div>
      <div class="valid-feedback">
        Looks good!
      </div>
    </div>

    <div class="form-group">
      <label for="price">Price:</label>
      <div class="input-group">
        <div class="input-group-prepend">
          <span class="input-group-text">$</span>
        </div>
        <input type="text" class="form-control" id="price" name="campground[price]" value="<%= campground.price %>" required>
        <div class="invalid-feedback">
          Please provide a price.
        </div>
        <div class="valid-feedback">
          Looks good!
        </div>
      </div>
    </div>

    <div class="form-group">
      <label for="location">Location:</label>
      <input type="text" class="form-control" id="location" name="campground[location]" value="<%= campground.location %>" required>
      <div class="invalid-feedback">
        Please provide a location.
      </div>
      <div class="valid-feedback">
        Looks good!
      </div>
    </div>

    <!-- Display Existing Images -->
    <div class="form-group">
      <label>Existing Images:</label>
      <div class="row">
        <% campground.images.forEach(function(image, index) { %>
          <div class="col-md-3 thumbnail-wrapper">
            <div class="thumbnail">
              <img src="<%= image.url %>" class="img-thumbnail" alt="Campground Image">
              <button type="button" class="btn btn-danger btn-sm btn-block mt-2 delete-image" data-filename="<%= image.filename %>">Delete</button>
            </div>
          </div>
        <% }); %>
      </div>
    </div>

    <!-- File Input for New Images -->
    <div class="form-group">
      <label for="images">Upload New Images:</label>
      <div class="custom-file">
        <input type="file" class="custom-file-input" id="images" name="image" multiple>
        <label class="custom-file-label" for="images">Choose files...</label>
        <div class="invalid-feedback">
          Please upload at least one image.
        </div>
      </div>
      <div id="file-names" class="mt-2"></div>
    </div>

    <div class="form-group">
      <label for="description">Description:</label>
      <textarea class="form-control" id="description" name="campground[description]" rows="4" required><%= campground.description %></textarea>
      <div class="invalid-feedback">
        Please provide a description.
      </div>
      <div class="valid-feedback">
        Looks good!
      </div>
    </div>

    <button type="submit" class="btn btn-primary">Update</button>
  </form>
</div>
